{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@types": ["./src/types"],
      "@storage": ["./src/storagemetadata"],
      "@utils": ["./src/utils"],
      "@/*": ["./src/*"]
    }
  }
}
